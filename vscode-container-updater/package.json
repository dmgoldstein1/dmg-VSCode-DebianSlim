{
  "name": "vscode-container-updater",
  "displayName": "VS Code Container Updater",
  "description": "Monitor and approve VS Code CLI updates in this containerized environment",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/dmgoldstein1/dmg-VSCode-DebianSlim"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-container-updater.checkUpdates",
        "title": "Check for VS Code CLI Updates",
        "category": "Container Updater"
      },
      {
        "command": "vscode-container-updater.approveUpdate",
        "title": "Approve VS Code CLI Update",
        "category": "Container Updater"
      },
      {
        "command": "vscode-container-updater.configure",
        "title": "Configure Update Settings",
        "category": "Container Updater"
      }
    ],
    "configuration": {
      "title": "VS Code Container Updater",
      "properties": {
        "vscode-container-updater.checkInterval": {
          "type": "number",
          "default": 300,
          "description": "Check interval in seconds (default: 5 minutes)"
        },
        "vscode-container-updater.autoCheck": {
          "type": "boolean",
          "default": true,
          "description": "Automatically check for updates in the background"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.103.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@vscode/vsce": "^3.6.0"
  }
}
