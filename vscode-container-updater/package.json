{
  "name": "vscode-container-updater",
  "displayName": "VS Code Container Updater",
  "description": "Monitor and approve VS Code CLI updates in this containerized environment",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/dmgoldstein1/dmg-VSCode-DebianSlim"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-container-updater.checkUpdates",
        "title": "Check for VS Code CLI Updates",
        "category": "Container Updater"
      },
      {
        "command": "vscode-container-updater.approveUpdate",
        "title": "Approve VS Code CLI Update",
        "category": "Container Updater"
      },
      {
        "command": "vscode-container-updater.configure",
        "title": "Configure Update Settings",
        "category": "Container Updater"
      }
    ],
    "configuration": {
      "title": "VS Code Container Updater",
      "properties": {
        "vscode-container-updater.checkInterval": {
          "type": "number",
          "default": 300,
          "description": "Check interval in seconds (default: 5 minutes)"
        },
        "vscode-container-updater.autoCheck": {
          "type": "boolean",
          "default": true,
          "description": "Automatically check for updates in the background"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "test": "npm run compile && npm run test:unit",
    "test:unit": "mocha out/test/**/*.test.js",
    "package": "npx @vscode/vsce package",
    "package:install": "npx @vscode/vsce package --out vscode-container-updater.vsix && code --install-extension vscode-container-updater.vsix"
  },
  "devDependencies": {
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@vscode/vsce": "^3.6.0"
  }
}
