{
  "name": "vscode-container-updater",
  "displayName": "VS Code Container Updater",
  "description": "Monitor and approve VS Code CLI updates in containerized environments",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-container-updater.checkUpdates",
        "title": "Check Container Updates",
        "category": "Container Updater"
      },
      {
        "command": "vscode-container-updater.approveUpdate",
        "title": "Approve VS Code Update",
        "category": "Container Updater"
      },
      {
        "command": "vscode-container-updater.configure",
        "title": "Configure Container Settings",
        "category": "Container Updater"
      }
    ],
    "configuration": {
      "title": "VS Code Container Updater",
      "properties": {
        "vscode-container-updater.containerName": {
          "type": "string",
          "default": "vscode-server-tunnel",
          "description": "Name of the VS Code container to monitor"
        },
        "vscode-container-updater.checkInterval": {
          "type": "number",
          "default": 300,
          "description": "Check interval in seconds (default: 5 minutes)"
        },
        "vscode-container-updater.autoCheck": {
          "type": "boolean",
          "default": true,
          "description": "Automatically check for updates in the background"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.103.0",
    "typescript": "^4.9.5"
  }
}
